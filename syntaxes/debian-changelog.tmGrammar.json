{
	"scopeName": "debian-changelog",
	"patterns": [
		{
			"include": "#top"
		},
		{
			"include": "#bottom"
		}
	],
	"repository": {
		"top": {
			"patterns": [
				{
					"comment": "Top line containing source, version, target and urgency",
					"match": "(.+) [(](.+)[)] (.+); (.+)",
					"captures": {
						"1": {
							"name": "keyword.control"
						},
						"2": {
							"name": "variable.parameter"
						},
						"3": {
							"name": "entity.name.tag"
						},
						"4": {
							"name": "entity.name.section"
						}
					}
				}
			]
		},
		"bottom": {
			"patterns": [
				{
					"comment": "Bottom line containing contributor name, email and timestamp",
					"match": " -- (.+) (<.+@.+[.].+>) (.+)",
					"captures": {
						"1": {
							"name": "entity.name.function"
						},
						"2": {
							"name": "variable.language"
						},
						"3": {
							"name": "entity.name.tag"
						}
					}
				}
			]
		}

	}
}